		<script>
		$(document).ready(function() {
    $('input[type=radio][name=kyc]').on('ifClicked', function () {
        if (this.value == '1') {
            $('#nominee-section').show();
			$('#kyc-section').show();
        }
        else if (this.value == '0') {
            $('#kyc-section').hide();
			$('#nominee-section').hide();
        }
    });
});
		</script>
		
	
